function StandardDeviation(numbersArr) {
    //--CALCULATE AVAREGE--
    var total = 0;
    for(var key in numbersArr) 
       total += numbersArr[key];
    var meanVal = total / numbersArr.length;
    //--CALCULATE AVAREGE--
  
    //--CALCULATE STANDARD DEVIATION--
    var SDprep = 0;
    for(var key in numbersArr) 
       SDprep += Math.pow((parseFloat(numbersArr[key]) - meanVal),2);
    var SDresult = Math.sqrt(SDprep/numbersArr.length);
    //--CALCULATE STANDARD DEVIATION--
    alert(SDresult);
    
}

function returnTeam(team){
	table = document.getElementById("myTable")
	numberOfRows = table.rows.length
	rows = table.rows
	for (var i = 0; i < numberOfRows; i ++){
		if (rows[i].children[0].innerText === team){
			rows[i].bgColor='yellow'
		} else{
			rows[i].bgColor=''
		}
	}
}

var sortByAttendance = function(){
	sortedData = data.sort(function(a, b){
		return parseFloat(b.Attendance) - parseFloat(a.Attendance);
	})
	buildTable(sortedData)
}

var sortByRecord = function(){
	sortedData = data.sort(function(a, b){
		return parseFloat(b.Record) - parseFloat(a.Record);
	})
	buildTable(sortedData)
}

var sortByTeam = function(){
	sortedData = data.sort(function(a, b){
		return a.Team.localeCompare(b.Team)
	})
	buildTable(sortedData)
}


var orderTableByAttendance = function(){
	sortByAttendance(data)
}

var orderTableByRecord = function(){
	sortByRecord(data)
}

var orderTableByTeam = function(){
	sortByTeam(data)
}

var returnTeamName = function(e){
	console.log("Here it is " + e) 
	teamName = e.target.innerText
	newName = teamName.replace(/\s+/g, '')
	console.log('Here is the team name: ' + newName)
	teams = [
	'Kentucky',
	'Louisville',
	'NorthCarolina',
	'Creighton',
	'Wisconsin',
	'Maryland',
	'BYU',
	'Vanderbilt',
	'UNLV',
	'Utah',
	'Alabama',
	'Colorado',
	'Hawaii',
	'DePaul',
	'Auburn',
	'PennSt',
	'NewMexico',
	'MichiganSt',
	'Xavier',
	'Georgetown'
	]
	var index = teams.indexOf(newName)
	if (index > -1){
		teams.splice(index, 1)
	}
	
	d3.select("#"+ newName).style('fill', 'red')
	for (var i = 0; i < teams.length; i ++){
		d3.select("#"+ teams[i]).style('fill', 'black')
	}	
}

